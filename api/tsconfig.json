{
  "exclude": [
    "node_modules",
    ".vscode",
    ".idea"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]
  }
}
